@{
    Layout = "";
}
@{
    ViewBag.Title = "admin";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- Font Awesome Link CSS-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="shortcut icon" href="#">
    <link href="@Url.Content("~/Content/admin.css")" rel="stylesheet" type="text/css" />
    <title>Admin</title>
</head>
<body>

    <nav class="navbar navbar-light bg-light justify-content-between">
        <a class="navbar-brand">ADMIN</a>
        <!-- <form class="form-inline">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form> -->

        <a href="/Home/Signout"><button class="btn btn-primary"><i class="fa fa-arrow-right"></i></button></a>
    </nav>

    <div class="container">
        <div class="row">


            <div class="card-group">


                <div class="card m-1">
                    <img src="~/Content/images/leaderboard.png" alt="Card image cap" />

                    <div class="card-body">
                        <h5 class="card-title">Leaderboard</h5>
                        <p class="card-text">Show the highest points gained by any user using voting. When a user vote for a team and thet team wins. User gets a point.</p>
                    </div>
                    <div class="card-footer d-flex justify-content-end">
                        <a href="/Our/leaderBoard"><button class="dashboard-link btn btn-primary">Leaderboard</button></a>
                    </div>
                </div>


                <div class="card m-1">
                    <img class="card-img-top" src="~/Content/images/news.png" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">News</h5>
                        <p class="card-text">Post any news about sports. Every user visiting this wesbite will see this post.</p>
                    </div>
                    <div class="card-footer d-flex justify-content-end">
                        <a href="/Our/newsFeed"><button class="news-link btn btn-primary">News</button></a>
                    </div>
                </div>

                <div class="card m-1">
                    <img class="card-img-top" src="~/Content/images/schedule.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Fixtures</h5>
                        <p class="card-text">Shows future matches. About Any sports.</p>
                    </div>
                    <div class="card-footer d-flex justify-content-end">
                        <a href="/Our/AddFixture"><button class="dashboard-link btn btn-info mr-2">+Add</button></a>
                        <a href="/Our/schedule"><button class="fixtures-link btn btn-primary">Fixtures</button></a>
                    </div>
                </div>
            </div>

            <div class="card-group">
                <div class="card m-1">
                    <img class="card-img-top" src="~/Content/images/teams.png" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Teams</h5>
                        <p class="card-text">Show all the teams present or have been make till now or Add a new Team.</p>
                    </div>
                    <div class="card-footer d-flex justify-content-end">
                        <a href="/Our/addTeam"><button class="dashboard-link btn btn-info mr-2">+Add</button></a>
                        <a href="/Our/teams"><button class="dashboard-link btn btn-primary">View</button></a>
                    </div>
                </div>
                <div class="card m-1">
                    <img class="card-img-top" src="~/Content/images/users.png" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Users</h5>
                        <p class="card-text">Show table of all the users including their id, email, name, image.</p>
                    </div>
                    <div class="card-footer d-flex justify-content-end">
                        <a href="/Our/usersDashboard"><button class="dashboard-link btn btn-primary">Users</button></a>
                    </div>
                </div>
            </div>

        </div>
    </div>
    

</body>
</html>

