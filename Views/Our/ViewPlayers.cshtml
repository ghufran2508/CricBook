@{
    Layout = "";
}
@{
    ViewBag.Title = "ViewTeam";
}
@model IEnumerable<WebApplication1.Models.Player>
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- Font Awesome Link CSS-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="shortcut icon" href="#">

    <link rel="icon" href="../icons/Sports-Logo-Designs-1280x720.jpg">
    <link href="@Url.Content("~/Content/User/viewTeam.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="../static/user/viewTeam.css">

    <title>Team</title>
</head>
<body>

    <nav class="navbar navbar-light bg-light justify-content-between">
        <a class="navbar-brand">ADMIN</a>
        <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Search By Team Name" aria-label="Search" name="name" id="s-name">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>

        <a href="/Home/Signout"><button class="btn btn-primary"><i class="fa fa-arrow-right"></i></button></a>
    </nav>

    <div class="container">
        <div class="row border border-dark team-info">
            <div class="col-12">
                @foreach (var p in Model)
                {
                    <img src="@p.Team.Logo" class="team-logo" />
                    <span class="team-name">@p.Team.TeamName</span>
                    break;
                }

            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-6">
                <div class="row">

                    @foreach (var player in Model)
                    {
                        <div class="col-6 p-2">
                            @player.playerName
                        </div>
                    }
                  
                </div>
            </div>

        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>

