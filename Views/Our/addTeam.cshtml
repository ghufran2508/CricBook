<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- Font Awesome Link CSS-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="shortcut icon" href="#">

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link href="@Url.Content("~/Content/addTeam.css")" rel="stylesheet" type="text/css" />
    <title>Create A New Team</title>
</head>
<body>

    <nav class="navbar navbar-light bg-light justify-content-between">
        <a class="navbar-brand">ADMIN</a>
        <!-- <form class="form-inline">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form> -->

        <a href="/Home/Signout"><button class="btn btn-primary"><i class="fa fa-arrow-right"></i></button></a>
    </nav>

    <div class="container">
        <div class="row rowC bg-white p-3 border border-dark form-card">

            <form action="/Our/AddNewTeam" method="post" class="col-12" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="exampleInputName1">Team Name:</label>
                    <input type="text" class="form-control" id="exampleInputName1" 
                           name="name"
                           aria-describedby="emailHelp" placeholder="Enter Team Name">
                    <small id="NameHelp" class="form-text text-muted">Team Name should be unique.</small>
                </div>

                <div class="row">
                    <div class="form-group col-6">
                        <label for="exampleInputPassword1">Choose Flag:</label>
                        <br>
                        <input type="file" name="flag"
                               class="btn btn-primary" />
                    </div>
                    <div class="form-group col-6">
                        <label for="exampleInputPassword1">Choose Sport Type:</label>
                        <br>


                        <select class="btn btn-primary p-2" name="sports_type" id="type">
                            <option value="Cricket">Cricket</option>
                            <option value="Football">Football</option>
                            <option value="Hockey">Hockey</option>

                        </select>

                    </div>
                </div>
                <div class="form-check pl-0">
                    <input type="number" placeholder="Enter Number of Players"
                           id="numberOfPlayers" />
                    <div class="btn btn-danger" onclick="generatePlayers()">Select</div>
                </div>
                <br>

                <div id="playersDiv">

                </div>

                <br>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
    </div>

    <script>
        function generatePlayers() {
            let count = document.getElementById("numberOfPlayers").value;

            // console.log(count);
            if (count && count > 0 && count < 17) {

                let playersDiv = document.getElementById("playersDiv");

                for (let i = 0; i < count; i++) {

                    let newInput = document.createElement("input");
                    newInput.type = "text";
                    newInput.placeholder = (i + 1) + ". Enter Name";
                    newInput.classList = "mt-1 ml-1 col-5";
                    newInput.name = "p" + (i + 1);
                    newInput.id = i + 1;
                    newInput.required = true;


                    playersDiv.appendChild(newInput);
                }

            }
        }</script>

</body>


</html>

