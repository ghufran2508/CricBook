            </tbody>
        </table>

    </div>

    <script>
    document.getElementById("player_name_search").value = "";
        var url_string = window.location.href;
        var url = new URL(url_string);
        var c = url.searchParams.get("search_player");

        if (c) {
            let tbr = document.getElementsByTagName("tbody")[0].rows;

            for (let i = 0; i < tbr.length; i++) {
                if (tbr[i].cells[2].innerText.indexOf(c) >= 0) {

                } else {
                    tbr[i].style.display = "none";
                }
            }
        }

        function searchPlayer() {
            let inp = document.getElementById("player_name_search");
            if (inp.value.length > 0) {
                document.getElementById("search-form").submit();
            }
        }</script>


