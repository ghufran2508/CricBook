@{
    Layout = "";
}
@{
    ViewBag.Title = "leaderBoard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- Font Awesome Link CSS-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="shortcut icon" href="#">
    <link href="@Url.Content("~/Content/leaderBoard.css")" rel="stylesheet" type="text/css" />
    <title>LeaderBoard</title>
</head>
<body>
    <nav class="navbar navbar-light bg-light justify-content-between">
        <a class="navbar-brand">ADMIN</a>
        <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Search By Email" aria-label="Search" name="email" id="s-email">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>

        <a href="./index"><button class="btn btn-primary"><i class="fa fa-arrow-right"></i></button></a>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-12 bg-primary text-center text-white p-3 table-header">
                LeaderBoard
            </div>
            <table class="table table-striped table-dark col-12">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Points</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td><img class="table-photo" src="~/Content/images/facebook-icon.jpg" /></td>
                        <td>Otto</td>
                        <td>mdo</td>
                        <td>200</td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td><img class="table-photo" src="~/Content/images/facebook-icon.jpg" /></td>
                        <td>Thornton</td>
                        <td>fat</td>
                        <td>197</td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td><img class="table-photo" src="~/Content/images/facebook-icon.jpg" /></td>
                        <td>the Bird</td>
                        <td>twitter</td>
                        <td>196</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>


    <script>
    document.getElementById("s-email").value = "";

        var url_string = window.location.href;
        var url = new URL(url_string);
        var c = url.searchParams.get("email");

        if (c) {
            let tableRows = document.getElementsByTagName("tr");

            for (let i = 1; i < tableRows.length; i++) {

                let exist = false;
                let tableData = tableRows[i].cells;

                if (tableData[3].firstChild.data == c) {
                    console.log(tableData);
                    exist = true;
                }
                if (!exist)
                    tableRows[i].style = "display: none;";
            }

        }</script>

</body>
</html>

